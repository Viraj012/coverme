<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg viewBox="0 0 400 250" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect x="0" y="0" width="400" height="250" fill="#f5f5f5" rx="8" ry="8"/>
  
  <!-- Browser window -->
  <rect x="20" y="160" width="360" height="70" fill="white" stroke="#ddd" stroke-width="2" rx="6" ry="6" opacity="0.3"/>
  
  <!-- CoverMe popup -->
  <rect x="40" y="20" width="320" height="200" fill="white" stroke="#ddd" stroke-width="2" rx="8" ry="8" filter="drop-shadow(0px 3px 5px rgba(0,0,0,0.1))"/>
  
  <!-- Popup header -->
  <rect x="40" y="20" width="320" height="40" fill="#4CAF50" rx="8" ry="8"/>
  <rect x="40" y="40" width="320" height="20" fill="#4CAF50" rx="0" ry="0"/>
  <text x="60" y="45" font-family="Arial" font-size="16" fill="white" font-weight="bold">CoverMe</text>
  
  <!-- Job info -->
  <rect x="60" y="70" width="280" height="40" fill="#f9f9f9" rx="4" ry="4"/>
  <text x="70" y="85" font-family="Arial" font-size="10" fill="#333" font-weight="bold">Senior Software Engineer</text>
  <text x="70" y="100" font-family="Arial" font-size="9" fill="#666">TechCorp Inc.</text>
  
  <!-- Options -->
  <text x="70" y="120" font-family="Arial" font-size="10" fill="#333">Template Style:</text>
  <rect x="70" y="125" width="120" height="20" fill="white" stroke="#ddd" stroke-width="1" rx="4" ry="4"/>
  <text x="80" y="139" font-family="Arial" font-size="9" fill="#333">Modern</text>
  <polygon points="180,135 175,130 175,140" fill="#666"/>
  
  <text x="220" y="120" font-family="Arial" font-size="10" fill="#333">Tone:</text>
  <rect x="220" y="125" width="100" height="20" fill="white" stroke="#ddd" stroke-width="1" rx="4" ry="4"/>
  <text x="230" y="139" font-family="Arial" font-size="9" fill="#333">Professional</text>
  <polygon points="310,135 305,130 305,140" fill="#666"/>
  
  <!-- Generate button -->
  <rect x="110" y="160" width="180" height="40" fill="#4CAF50" rx="20" ry="20"/>
  <text x="200" y="184" font-family="Arial" font-size="14" fill="white" font-weight="bold" text-anchor="middle">Generate Cover Letter</text>
  
  <!-- Generated document preview (animation hint) -->
  <rect x="180" y="140" width="40" height="5" fill="#ddd" rx="2.5" ry="2.5"/>
  <rect x="140" y="210" width="120" height="3" fill="#ddd" rx="1.5" ry="1.5" opacity="0.7"/>
</svg>