{
    "manifest_version": 3,
    "name": "CoverMe",
    "version": "1.0.0",
    "description": "Generate tailored cover letters from job descriptions",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [{
      "resources": [
        "profile/*",
        "settings/*",
        "templates/*",
        "popup/*",
        "onboarding/*",
        "images/*"
      ],
      "matches": ["<all_urls>"]
    }]
}